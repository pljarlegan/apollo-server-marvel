version: '3'

services:
  server:
    container_name: node
    image: node:10-alpine
    restart: always
    volumes:
      - ./:/home/node/app
    command: sh -c "npm start --prefix /home/node/app"
    ports:
      - 4000:4000
    env_file: .env
    environment:
      - NODE_ENV=production
      - MEMCACHED=memcached
    stop_grace_period: 1s


  memcached:
    container_name: memcached
    image: memcached
    ports:
    - 11211:11211
    restart: always
    stop_grace_period: 1s
